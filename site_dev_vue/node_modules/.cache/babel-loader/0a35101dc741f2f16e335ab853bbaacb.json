ma.class\" v-for=\"clima in climas\" v-bind:key=\"clima.dt\">\n    <span v-if=\"clima.class === 'sec'\">{{clima.dia}}</span>\n    <i v-bind:class=\"clima.icone\"></i>\n    {{clima.temp}}\n    <span v-if=\"clima.class === 'pri'\">ºC</span>\n  </div>\n</div>\n</template>\n\n<script>\n\nimport $ from 'jquery'\n\nexport default {\n\tname: 'Clima',\n  data () {\n    return {\n      climas: []\n    }\n  },\n  mounted: function () {\n    this.update();\n  },\n  methods:\n  {\n    update: function () {\n      $.ajax({ url: 'api/clima', dataType: 'json' })\n        .then((res) => {\n          this.climas = [];\n          var dias = ['Dom', 'Seg', 'Ter', 'Qua', 'Qui', 'Sex', 'Sab']\n          for (var i = 0; i < res.length; i++) {\n            let clima = { }\n            var date = new Date(res[i].data)// data da medição\n            if (res[i].description === 'clear sky') {\n              clima.icone = 'wi wi-day-sunny'\n            } \n            else if (res[i].description === 'few clouds' || res[i].description === 'scattered clouds'  || res[i].description === 'broken clouds')\n                clima.icone = \"wi wi-cloudy\"\n            else\n                clima.icone = \"wi wi-rain\"\n            clima.dia = dias[date.getDay()]\n            clima.temp = res[i].temp\n            if(i === 0)\n              clima.class = 'pri'\n            else\n              clima.class = 'sec'\n            this.climas.push(clima)\n          }\n      })\n      .catch((error)=>{\n        setTimeout(this.update, 1000*60*0.5);\n      })\n    }\n  },\n}\n</script>\n\n<style>\n/*------------------ CLIMA */\n.clima_container{\n  width: 10rem;\n  height: 20vh;\n\tborder-radius: 5px;\n\tbackground-color: #fff;\n\tdisplay:grid;\n\tgrid-template-columns: 1fr 1fr 1fr 1fr;\n\tgrid-template-rows: auto auto;\n}\n\n.pri{\n  justify-self: center;\n\talign-self: center;\n\tbackground-color: #fff;\n\tfont-size: 1.5rem;\n\tgrid-column-start: 1;\n\tgrid-column-end: 6;\n}\n\n.pri  i{     /* Tamanho do icone */\n\tpadding-right: 0.5rem;\n  font-size: 2rem;\n}\n\n.pri span{  /* Tamanho do ºC de celsius */\n\tfont-size: 1rem;\n}\n\n.sec{\n\tdisplay: grid;\n\tgrid-template-columns: 1fr;\n\tgrid-gap: 0.4rem;\n\tmargin:auto;\n\tfont-size : 0.7rem;\n\tgrid-row-start: 2;\n}\n</style>"],"sourceRoot":"src/components"}]}